<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shrey.task1sample">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:usesCleartextTraffic="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:windowSoftInputMode="stateVisible|adjustResize"
            android:name="com.dragonchu.control.register.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.dragonchu.control.tweet.TweetActivity" android:windowSoftInputMode="stateVisible|adjustResize"/>
        <activity android:name="com.dragonchu.control.writetweet.WriteTweetActivity" android:windowSoftInputMode="stateVisible|adjustResize"/>
        <activity android:name="com.dragonchu.control.tweetlist.TweetsListActivity" android:windowSoftInputMode="stateVisible|adjustResize"/>
        <activity android:name="com.dragonchu.control.login.loginActivity" android:windowSoftInputMode="stateVisible|adjustResize"/>
    </application>

</manifest>